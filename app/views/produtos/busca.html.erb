<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th>Descrição</th>
			<th>Preço</th>
			<th>Quantidade</th>
		</tr>
	</thead>
	<tbody>
		<% @produtos.each do |produto| %>
		<tr>
			<td><%= produto.nome %></td>
			<td><%= produto.descricao %></td>
			<td><%= produto.preco %></td>
			<td><%= produto.quantidade %></td>
			<td><%= button_to "Remover", produto, method: :delete, class: "btn btn-danger", data: {confirm: "Deseja remover?"} %></td>
		</tr>
		<% end %>
	</tbody>
</table>